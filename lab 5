import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        System.out.println("Введите число");
        int a= scan.nextInt();
        System.out.print("Следующее четное число-");
        System.out.println((a & 1) == 0 ? a + 2 : a + 1);
        }
    }
